<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../default.props"/>

  <PropertyGroup>
    <AssemblyName>Dolittle.Runtime.Server</AssemblyName>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../Source/AggregatedPackage/Runtime.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dolittle.Booting" Version="$(FundamentalsVersion)" />
    <PackageReference Include="Dolittle.Configuration.Files" Version="$(FundamentalsVersion)" />
    <PackageReference Include="Dolittle.Concepts.Serialization.Json" Version="$(FundamentalsVersion)" />
    <PackageReference Include="Dolittle.DependencyInversion.Booting" Version="$(FundamentalsVersion)" />
    <PackageReference Include="Dolittle.DependencyInversion.Autofac" Version="$(FundamentalsVersion)" />
    <PackageReference Include="Dolittle.Execution" Version="$(FundamentalsVersion)" />
    <PackageReference Include="Dolittle.Resilience" Version="$(FundamentalsVersion)" />
    <PackageReference Include="Dolittle.Runtime.Contracts" Version="$(ContractsVersion)" Alias="contracts"/>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="3.1.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="3.1.2" />
  </ItemGroup>

</Project>
